{
  "name": "@upzy/email",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "dev": "email dev --dir ./src/templates --port 3001"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.2.8",
    "@types/bun": "latest",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@upzy/eslint-config": "workspace:^",
    "@upzy/typescript-config": "workspace:*",
    "@upzy/ui": "workspace:*",
    "react-email": "5.2.8",
    "tsdown": "^0.20.3",
    "tsx": "^4.19.4",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "@react-email/components": "1.0.7",
    "@react-email/render": "2.0.4",
    "nodemailer": "^7.0.3",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./templates/*": {
      "types": "./dist/templates/*.d.mts",
      "default": "./dist/templates/*.mjs"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.mts",
      "default": "./dist/lib/*.mjs"
    },
    "./types": {
      "types": "./dist/types/index.d.mts",
      "default": "./dist/types/index.mjs"
    }
  }
}
