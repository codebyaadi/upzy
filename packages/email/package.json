{
  "name": "@upzy/email",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsup",
    "dev": "email dev --dir ./src/templates --port 3001",
    "docker:up": "docker compose up -d || docker-compose up -d"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/nodemailer": "^6.4.17",
    "@upzy/eslint-config": "workspace:^",
    "@upzy/typescript-config": "workspace:*",
    "@upzy/ui": "workspace:*",
    "react-email": "4.0.15",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "@react-email/components": "0.0.41",
    "nodemailer": "^7.0.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./templates/*": {
      "default": "./dist/templates/*.js",
      "types": "./src/templates/*.tsx"
    },
    "./lib/*": {
      "default": "./dist/lib/*.js",
      "types": "./src/lib/*.ts"
    },
    "./types": {
      "default": "./dist/types/index.js",
      "types": "./src/types/index.ts"
    }
  }
}
