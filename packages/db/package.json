{
  "name": "@upzy/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "bun run db:studio",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:seed": "bun run src/seed.ts",
    "db:studio": "bunx drizzle-kit studio",
    "lint": "eslint . --max-warnings 0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/bun": "latest",
    "@types/pg": "^8.15.2",
    "@upzy/eslint-config": "workspace:*",
    "@upzy/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.0",
    "redis": "^5.8.0",
    "uuid": "^13.0.0"
  },
  "exports": {
    "./drizzle": {
      "types": "./dist/drizzle.d.ts",
      "default": "./dist/drizzle.js"
    },
    "./redis": {
      "types": "./dist/redis.d.ts",
      "default": "./dist/redis.js"
    },
    "./schema/*": {
      "types": "./dist/schema/*.d.ts",
      "default": "./dist/schema/*.js"
    }
  }
}
