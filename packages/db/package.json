{
  "name": "@upzy/db",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsup",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:seed": "bun run src/seed.ts",
    "lint": "eslint . --max-warnings 0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/bun": "latest",
    "@types/pg": "^8.15.2",
    "@upzy/eslint-config": "workspace:*",
    "@upzy/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.3",
    "pg": "^8.16.0",
    "redis": "^5.8.0"
  },
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./schema/*": {
      "types": "./src/schema/*.ts",
      "default": "./dist/schema/*.js"
    }
  }
}
