{
  "name": "@upzy/auth",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsup",
    "auth:generate": "bunx @better-auth/cli generate --config src/server.ts --output ../db/src/schema/auth.ts",
    "auth:migrate": "bunx @better-auth/cli@latest migrate --config src/server.ts",
    "lint": "eslint . --max-warnings 0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@upzy/eslint-config": "workspace:*",
    "@upzy/typescript-config": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "better-auth": "^1.2.8",
    "@upzy/db": "workspace:*"
  },
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./server": {
      "default": "./dist/server.js",
      "types": "./src/server.ts"
    },
    "./client": {
      "default": "./dist/client.js",
      "types": "./src/client.ts"
    }
  }
}
