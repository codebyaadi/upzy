{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "go:build": {
      "inputs": ["**/*.go", "go.mod", "go.sum"],
      "outputs": ["bin/**", "../../bin/**"]
    },
    "go:format": {
      "inputs": ["**/*.go", "go.mod", "go.sum"]
    },
    "go:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
